@import './quasar.variables'
@import '~quasar-styl'
// @import '~quasar-addon-styl'

.w-100 {
  width: 100%;
}
.card-hover {
	&:hover{
  background: #f1f1f1; 
	}
}
.calculator-cards {
  padding: 20px;
  height: 290px;
  border: 1px solid #E0E0E0;
}
a.router-link-active {
  color: black;
}
.q-card-title { 
  color: $primary;
  font-weight:bold;
  line-height: 1.5rem;
}
.header-app-name {
  position: relative;
  bottom: 2px;
  font-size: 2em;
}
.icon {
  width:50px;
  height:50px;
  background-color: black;
  -webkit-mask: url(../assets/logo.svg) no-repeat center;
}
.q-layout-header {
  background-color:white;
  border-bottom: 0;
}
.q-layout-drawer{
  border-left: 1px solid #E0E0E0;
}
.search-style{
  padding: 12px;
  background: white;
  border: 1px solid #36454F;
  border-radius: 30px;
}
.drawer-icon{
  color: $primary;
  font-size: 1.5em;
  position: absolute;
  right: 5px;
  top: 6px;
}
.border-top {
  border-top: 1px solid #E0E0E0;
}
.query{
@media only screen and (max-width: 768px) {
  padding-top:0;
  border-bottom: 1px solid #E0E0E0;
  }
}
.scroll-header {
border-bottom: 1px solid #E0E0E0 !important;
}
